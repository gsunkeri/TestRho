<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @user.Username %></h1>
    <%= link_to "Edit", :action => :edit, :id => @user.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">Username</td>
        <td class="itemValue"><%= @user.Username%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Password</td>
        <td class="itemValue"><%= @user.Password%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Email</td>
        <td class="itemValue"><%= @user.Email%></td>
      </tr>
      
    </table>
  </div>

</div>
